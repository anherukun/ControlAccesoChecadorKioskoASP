<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Control de acceso - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script type="text/javascript">
        function playsound(select) {
            // 0: Error     1: Success      default: none
            var sound = document.getElementById("audio-source");
            switch (select) {
                case 0:
                    sound.src = "/App_Sounds/alarm.ogg";
                    break;

                case 1:
                    sound.src = "/App_Sounds/MENU%20A_Select.wav";
                    break;

                default:
                    sound.src = "";
                    break;
            }
            sound.play();
        }
    </script>
</head>

<body>
    <audio id="audio-source"></audio>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Checador", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Configuraciones", "Index", "Configurations")</li>
                    <li>@Html.ActionLink("Herramientas", "Index", "Administration")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Checador (Snapshot 21e5e693), Desarrollado por Angel Jimenez Reyes</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
